<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy_background"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:hint="Digite o número de telefone"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#DDDDDD"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="💬 Enviar SMS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMakeCall"
        style="@android:style/Widget.Button"
        android:background="@drawable/rounded_button_translucent"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"/>



    <Button
        android:id="@+id/btnMakeCall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="📞 Fazer Ligação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOpenBrowser"
        style="@android:style/Widget.Button"
        android:background="@drawable/rounded_button_translucent"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnOpenMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="🗺️ Abrir Mapa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendSMS"
        style="@android:style/Widget.Button"
        android:background="@drawable/rounded_button_translucent"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnShareText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="📤 Compartilhar Texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOpenMap"
        style="@android:style/Widget.Button"
        android:background="@drawable/rounded_button_translucent"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnOpenBrowser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="🌐 Abrir Navegador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtPhoneNumber"
        style="@android:style/Widget.Button"
        android:background="@drawable/rounded_button_translucent"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
